<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>MUSIC APP</header>

    <div id="log-buttons">
      <%if logged_in? %>
        <button href="<%=new_user_url%>">Log Out</button>
      <%else%>
        <button href="<%=new_session_url%>">Log In</button>
        <button href="<%=new_user_url%>">Sign Up</button>
      <%end%>
    </div>

  <body>
    <%= yield %>
  </body>
</html>
